function emh_access_user_name( $node ) {

  $account = user_load($node->uid);

  $access = FALSE;

  // Check node options
  // 0|Display my full name
  // 1|Hide my full name
  if ( $node->field_anonymous[LANGUAGE_NONE][0]['value'] == 0 ) $access = TRUE;

  return $access;

}

function emh_access_user_company( $node ) {

  $account = user_load($node->uid);

  $access = FALSE;

  // Check node options
  // 0|Display the name
  // 1|Hide the name
  if ( $node->field_show_entreprise[LANGUAGE_NONE][0]['value'] == 0 ) $access = TRUE;

  return $access;

}
