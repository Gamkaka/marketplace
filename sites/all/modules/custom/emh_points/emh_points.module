/**
 * Helper callback for points deletion.
 */
function emh_points_entity_points_delete($id, $type) {
  db_delete('emh_points')
    ->condition('entity_id', $id)
    ->condition('entity_type', $type)
    ->execute();
  db_delete('emh_points_total')
    ->condition('entity_id', $id)
    ->condition('entity_type', $type)
    ->execute();
