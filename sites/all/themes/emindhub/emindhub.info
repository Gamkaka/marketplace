;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = js/main.js
scripts[] = 'libraries/bootstrap/js/affix.js'
scripts[] = 'libraries/bootstrap/js/alert.js'
scripts[] = 'libraries/bootstrap/js/button.js'
scripts[] = 'libraries/bootstrap/js/carousel.js'
scripts[] = 'libraries/bootstrap/js/collapse.js'
scripts[] = 'libraries/bootstrap/js/dropdown.js'
scripts[] = 'libraries/bootstrap/js/modal.js'
scripts[] = 'libraries/bootstrap/js/tooltip.js'
scripts[] = 'libraries/bootstrap/js/popover.js'
scripts[] = 'libraries/bootstrap/js/scrollspy.js'
scripts[] = 'libraries/bootstrap/js/tab.js'
scripts[] = 'libraries/bootstrap/js/transition.js'

