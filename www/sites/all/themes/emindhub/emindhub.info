name = eMindHub
description = Thème développé pour eMindHub. Basé sur Bootstrap pour une interface responsive.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[topmenu]        = 'Top menu'
regions[navigation]     = 'Navigation'
regions[header]         = 'Top content'
;regions[header_right]  = 'Top content - Right'
regions[title]          = 'Title'
regions[title_right]    = 'Title - Right'
regions[title_bottom]   = 'Title - Bottom'
regions[top]            = 'Page top'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[bottom]         = 'Page bottom'
;regions[bottom_right]  = 'Page bottom - Right'
regions[footer_top]     = 'Footer - Top'
regions[footer_bottom]  = 'Footer - Bottom'
regions[burgermenu]     = 'Burger Menu'

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = 'dist/style.min.css'
; exclude module styles
exclude[css][] = 'modules/field/theme/field.css'
exclude[css][] = 'sites/all/modules/contrib/autocomplete_deluxe/autocomplete_deluxe.css'
exclude[css][] = 'sites/all/modules/contrib/chosen/css/chosen-drupal.css'
exclude[css][] = 'sites/all/modules/contrib/date/date_api/date.css'
exclude[css][] = 'sites/all/modules/contrib/eu_cookie_compliance/css/eu_cookie_compliance.css'
exclude[css][] = 'sites/all/modules/contrib/link/link.css'
exclude[css][] = 'sites/all/modules/contrib/hybridauth/css/hybridauth.css'
exclude[css][] = 'sites/all/modules/contrib/views/css/views.css'
exclude[css][] = 'sites/all/modules/contrib/webform/css/webform-admin.css'
exclude[css][] = 'sites/all/modules/contrib/field_collection/field_collection.theme.css'


; For information on choosing the desired method, please read the Drupal
; Bootstrap sub-theme "how-to" documentation:
; https://drupal.org/node/1978010

;----------------------------------
; METHOD 1: Bootstrap Source Files
;----------------------------------

;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'dist/script.min.js'
scripts[] = 'libraries/bootstrap/js/affix.js'
scripts[] = 'libraries/bootstrap/js/alert.js'
;scripts[] = 'libraries/bootstrap/js/button.js'
;scripts[] = 'libraries/bootstrap/js/carousel.js'
scripts[] = 'libraries/bootstrap/js/collapse.js'
scripts[] = 'libraries/bootstrap/js/dropdown.js'
scripts[] = 'libraries/bootstrap/js/modal.js'
scripts[] = 'libraries/bootstrap/js/tooltip.js'
scripts[] = 'libraries/bootstrap/js/popover.js'
;scripts[] = 'libraries/bootstrap/js/scrollspy.js'
;scripts[] = 'libraries/bootstrap/js/tab.js'
scripts[] = 'libraries/bootstrap/js/transition.js'

; Disable BootstrapCDN if using Bootstrap source files in your sub-theme.
settings[bootstrap_cdn] = ''


;-------------------------
; METHOD 2: Bootstrap CDN
;-------------------------

; Method 2 uses BootstrapCDN, the only thing you might need to provide here
; is overrides to Bootstrap theme settings. Copy them here from the base theme
; to override.


; Tooltips
; --------------
settings[bootstrap_tooltip_enabled] = 1
settings[bootstrap_tooltip_descriptions] = 0
settings[bootstrap_tooltip_html] = 1
